{
  "manifest_version": 3,
  "name": "AI Customer Support Assistant",
  "version": "1.0.0",
  "description": "Intelligent customer support agent that understands website documentation",
  "permissions": [
    "activeTab",
    "storage",
    "background",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Customer Support Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}